<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_darker">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/settings"
            app:titleTextColor="@color/text_primary" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Settings ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Video Settings Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_settings"
                android:textColor="@color/brand_purple"
                android:textSize="@dimen/text_label_large"
                android:textStyle="bold"
                android:padding="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_large" />

            <!-- Resolution Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_medium"
                android:background="@color/background_darker"
                
                android:layout_marginHorizontal="@dimen/padding_small"
                android:layout_marginBottom="@dimen/padding_small">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/default_resolution"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_body_large" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/resolution_description"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_label_small" />
                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/toggle_auto_resolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <!-- Render Threads Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_medium"
                android:background="@color/background_darker"
                
                android:layout_marginHorizontal="@dimen/padding_small"
                android:layout_marginBottom="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/render_threads"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_body_large" />

                    <TextView
                        android:id="@+id/thread_count_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/auto"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_label_small" />
                </LinearLayout>
            </LinearLayout>

            <!-- Audio Settings Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/audio_settings"
                android:textColor="@color/brand_purple"
                android:textSize="@dimen/text_label_large"
                android:textStyle="bold"
                android:padding="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_large" />

            <!-- Sample Rate Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_medium"
                android:background="@color/background_darker"
                
                android:layout_marginHorizontal="@dimen/padding_small"
                android:layout_marginBottom="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/audio_sample_rate"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_body_large" />

                    <Spinner
                        android:id="@+id/sample_rate_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- Application Settings Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/application"
                android:textColor="@color/brand_purple"
                android:textSize="@dimen/text_label_large"
                android:textStyle="bold"
                android:padding="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_large" />

            <!-- Dark Mode Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_medium"
                android:background="@color/background_darker"
                
                android:layout_marginHorizontal="@dimen/padding_small"
                android:layout_marginBottom="@dimen/padding_small">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dark_mode"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body_large" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/toggle_dark_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <!-- Notifications Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_medium"
                android:background="@color/background_darker"
                
                android:layout_marginHorizontal="@dimen/padding_small"
                android:layout_marginBottom="@dimen/padding_medium">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/notifications"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body_large" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/toggle_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <!-- About Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textColor="@color/brand_purple"
                android:textSize="@dimen/text_label_large"
                android:textStyle="bold"
                android:padding="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_large" />

            <!-- Version Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_medium"
                android:background="@color/background_darker"
                
                android:layout_marginHorizontal="@dimen/padding_small"
                android:layout_marginBottom="@dimen/padding_small">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/version"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body_large" />

                <TextView
                    android:id="@+id/version_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version_placeholder"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_body_large" />
            </LinearLayout>

            <!-- Help & Support -->
            <LinearLayout
                android:id="@+id/help_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_medium"
                android:background="@color/background_darker"
                android:layout_marginHorizontal="@dimen/padding_small"
                android:layout_marginBottom="@dimen/padding_small">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/help_support"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_body_large" />

                <ImageView
                    android:layout_width="@dimen/icon_medium"
                    android:layout_height="@dimen/icon_medium"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:contentDescription="@string/help_support"
                    android:tint="@color/text_secondary" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
