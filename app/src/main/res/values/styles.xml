<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextAppearance.DisplayLarge" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.TitleLarge" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.BodyLarge" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.BodyMedium" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.ClipForge.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.ClipForge.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/brand_purple</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.ClipForge.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
</resources>
